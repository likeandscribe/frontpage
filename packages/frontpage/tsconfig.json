{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      // TODO: Move this to subpath imports once https://github.com/microsoft/TypeScript/issues/52460 is resolved
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.mts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules"]
}
