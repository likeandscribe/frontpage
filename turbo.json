{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DRAINPIPE_CONSUMER_SECRET",
        "POSTGRES_URL",
        "DISCORD_WEBHOOK_URL",
        "TURSO_CONNECTION_URL",
        "TURSO_AUTH_TOKEN"
      ]
    },
    "type-check": {},
    "test": {
      "dependsOn": ["^build"]
    }
  },
  "globalEnv": ["CI"]
}
